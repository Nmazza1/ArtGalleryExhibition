@model ArtGalleryExhibition.Models.CreateExhibitionViewModel
@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Create";
   

    // ...

    Console.WriteLine("Received ViewModel:");
    Console.WriteLine(JsonConvert.SerializeObject(Model, Formatting.Indented));

}

<h1>Create</h1>
<h4>Exhibition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exhibition.StartDate" class="control-label"></label>
                <input asp-for="Exhibition.StartDate" class="form-control" />
                <span asp-validation-for="Exhibition.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exhibition.EndDate" class="control-label"></label>
                <input asp-for="Exhibition.EndDate" class="form-control" />
                <span asp-validation-for="Exhibition.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exhibition.Address" class="control-label"></label>
                <input asp-for="Exhibition.Address" class="form-control" />
                <span asp-validation-for="Exhibition.Address" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Exhibition.currentlyRunning" /> @Html.DisplayNameFor(model => model.Exhibition.currentlyRunning)
                </label>
            </div>


            <hr/>
            <!-- Art Pieces Included checkboxes -->
            @if (Model.passedArtworks != null)
            {
                @foreach (var artwork in Model.passedArtworks)
                {
                    
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="artworkCheckbox@(artwork.Id)" name="SelectedArtworkIds" value="@artwork.Id">
                        <label class="form-check-label" for="artworkCheckbox@(artwork.Id)">
                            @artwork.Title
                        </label>
                    </div>
                }
            }
            else
            {
                <p>Error / No Present Artworks to choose.</p>
            }

            <hr/>

            <!-- Artists checkboxes -->
            @if(Model.passedArtists != null)
            {
                @foreach (var artist in Model.passedArtists)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="artistCheckbox@(artist.Id)" name="SelectedArtistIds" value="@artist.Id">
                        <label class="form-check-label" for="artistCheckbox@(artist.Id)">
                            @artist.FirstName @artist.LastName
                        </label>
                    </div>
                }
            }
            else
            {
                <p>No Artists / Error</p>
            }
            <hr />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
